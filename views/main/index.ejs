<% layout('layout') -%>

<div class="container">
  <!-- <h1>Hello World</h1> -->
  <div class="row">
    <% if (!message) {%>

      <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3 hidden">
        <div class="alert alert-success">

        </div>
      </div>
    <% } else {%>
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
          <div class="alert alert-success">
            <%= message %>
          </div>
        </div>
    <% } %>
  </div>
  
  <% products.forEach(function(product) { %>
    <div class="row">
      <% for (var i=0; i < product.length; i++) { %>
      <div class="col-sm-6 col-md-4">
              <div class="thumbnail">
                <img src="<%= product[i].imagePath %>" alt="..." class="img-fluid img-responsive">
                <div class="caption">
                  <h3><%= product[i].title %></h3>
                  <!-- <h3>Thumbnail label</h3> -->
                  <p class="description"><%= product[i].description %></p>
                  <div class="clearfix">
                    <div class="price pull-left">$<%= product[i].price%></div>
                    <a href="/add-to-cart/<%= product[i]._id%>" class="btn btn-success pull-right" role="button">Add to Cart</a>
                  </div>
                </div>
              </div>
            </div>
            
            <% } %>
          </div>
          <% }) %>
      
      
      
    </div>










