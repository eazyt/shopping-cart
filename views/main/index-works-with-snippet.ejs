<% layout('layout') -%>

<div class="container">
  <!-- <h1>Hello World</h1> -->
  
    <div class="row">
      <% products.forEach(function(product) { %>
      
      <div class="col-sm-6 col-md-4">
              <div class="thumbnail">
                <img src="<%= product.imagePath %>" alt="..." class="img-fluid img-responsive">
                <div class="caption">
                  <h3><%= product.price%></h3>
                  <!-- <h3>Thumbnail label</h3> -->
                  <p class="description"><%= product.description %></p>
                  <div class="clearfix">
                    <div class="price pull-left">$<%= product.price%></div>
                    <a href="#" class="btn btn-success pull-right" role="button">Button</a>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
            
          </div>
      
      
      
    </div>










